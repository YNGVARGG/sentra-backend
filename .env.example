# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/sentra

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# External Services (Optional)
SMS_PROVIDER_URL=
MPESA_API_URL=

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_SMS=false
ENABLE_MPESA=false

# Security Settings
MAX_REQUEST_SIZE=10mb
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# Performance Settings
DB_POOL_SIZE=20
REDIS_MAX_RETRIES=3
SOCKET_TIMEOUT=60000

# Emergency Settings
EMERGENCY_RESPONSE_TIME=60
AUTO_DISPATCH_ENABLED=false

# Logging
LOG_LEVEL=debug
LOG_RETENTION_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
EMERGENCY_RATE_LIMIT_MAX=10

# Health Check
HEALTH_CHECK_INTERVAL=30000

# WebSocket
WS_MAX_CONNECTIONS=10000
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# Encryption
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=change-this-encryption-key-in-production

# Twilio (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Monitoring (Optional)
SENTRY_DSN=
ENABLE_SENTRY=false

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/sentra_test
TEST_REDIS_URL=redis://localhost:6379

# Development
ENABLE_DEBUG_LOGS=true
ENABLE_REQUEST_LOGGING=true

# Deployment
DEPLOYMENT_ID=local
BUILD_VERSION=1.0.0